            @Html.PermissionButton("goodsinfos.Review","a_add","#","审核",new  Dictionary<string, object>{{"plain","true"},{"icon","icon-group_add"},{"class","easyui-linkbutton"},{"onclick","goodsinfosCtrl.Review()"}})

