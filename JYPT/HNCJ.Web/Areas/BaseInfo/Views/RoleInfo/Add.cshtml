@model HNCJ.Model.RoleInfo
@{
    Layout = null;
}

    <div   style="width:100%;max-width:400px;padding:30px 60px;">
		<form id="ff" method="post" action="/baseinfo/roleinfo/save" >
			<div style="margin-bottom:20px">
				<input class="easyui-textbox" name="RoleNo" style="width:100%" value="@Model.RoleNo"  data-options="label:'编号:',required:true">
			</div>
            <div style="margin-bottom:20px">
				<input class="easyui-textbox" name="RoleName" style="width:100%"value="@Model.RoleName"   data-options="label:'名称:',required:true">
			</div>
			<div style="margin-bottom:20px">
				<input class="easyui-textbox" name="Description" value="@Model.Description"   style="width:100%;height:60px" data-options="label:'描述:',multiline:true">
			</div>
            
			<div style="margin-bottom:20px">
                <label>有效：</label>
			    @Html.CheckBox("State", Model.State != null && (bool)Model.State, new { @class="textbox"})
			</div> 
            @Html.HiddenFor(u=>u.ID)
            @Html.HiddenFor(u=>u.DelFlag)
            @Html.HiddenFor(u=>u.RegTime)
            @Html.HiddenFor(u=>u.ModfiedOn)

		</form>
	</div>