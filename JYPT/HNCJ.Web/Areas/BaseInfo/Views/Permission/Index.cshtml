@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<script type="text/javascript">
        var PermissionCtrl = {
            ID:0,
            //初始化
            Init: function () {
                this.TreePermission();
            }, 
            
            //部门树
            TreePermission: function () {
                var $this = this;
                $.fn.zTree.init($("#Permission"), {
                    data: {
                        key: {
                            name: "ActionName"
                        },
                        simpleData: {  
                            enable: true,
                            idKey: "ID",
                            pIdKey: "ParentId",
                            rootPId: -1
                        }  
                    } ,
                    async: {
                        enable: true,
                        url: "/BaseInfo/Permission/GetActionList"
                    },
                    callback: {
                        onAsyncSuccess: function (event, treeId, treeNode, msg) {
                            var treeObj = $.fn.zTree.getZTreeObj("Permission");
                            var nodes = treeObj.getNodes();
                            if (nodes.length > 0) {
                                treeObj.expandNode(nodes[0], true, false, true);
                            }
                            
                        },
                        onClick: function (event, treeId, treeNode) {
                            $this.ID = treeNode.ID;
                           
                            $('#pp').panel({
                                href: '/BaseInfo/Permission/Details/'+treeNode.ID
                            });

                        }
                    }
                });
                
            },
           
            //公用按钮
            ButtonCommon: function () {
                $('#ff').form('submit', {
                    onSubmit: function () {
                        var isValid = $(this).form('enableValidation').form('validate');

                        if (!isValid) {
                            $.messager.progress('close');
                        }
                        return isValid;
                    },
                    success: function (result) {
                        var data = eval('(' + result + ')'); // change the JSON string to javascript object
                        if (data.status === 1) {
                            $('#actiondialog').dialog('close');
                            $.messager.show({
                                title: '提示',
                                msg: data.msg,
                                showType: 'slide',
                                timeout: 2000
                            });
                            PermissionCtrl.TreePermission();

                        } else {
                            $.messager.show({
                                title: '提示',
                                msg: data.msg,
                                showType: 'slide',
                                timeout: 2000,
                                style: {
                                    right: '',
                                    top: document.body.scrollTop + document.documentElement.scrollTop,
                                    bottom: ''
                                }
                            });
                        }
                    }
                });
            },
            //点击新增
            addClick: function () {
                var url = "/BaseInfo/Permission/add";
                $('#actiondialog').dialog({
                    title: '添加',
                    width: 600,
                    height: 300,
                    href: url,
                    closed: false,
                    cache: false,
                    maximizable: true,
                    modal: true,
                    buttons: [{
                        text: '确定',
                        handler: function () {
                            PermissionCtrl.ButtonCommon();
                        }
                    }, {
                        text: '关闭',
                        handler: function () {
                            $('#actiondialog').dialog('close');

                        }
                    }]
                });
            },
            //编辑方法
            editClick: function () {
                var treeObj = $.fn.zTree.getZTreeObj("Permission");
                var nodes = treeObj.getSelectedNodes();
                if (nodes.length <= 0) {
                    $.messager.show({
                        title: '提示',
                        msg: "请选中一条数据",
                        showType: 'slide',
                        timeout: 2000,
                        style: {
                            right: '',
                            top: document.body.scrollTop + document.documentElement.scrollTop,
                            bottom: ''
                        }
                    });
                    return;
                }
                var url = "/BaseInfo/Permission/Edit/" +this.ID;
                $('#actiondialog').dialog({
                    title: '编辑',
                    width: 600,
                    height: 300,
                    href: url,
                    closed: false,
                    cache: false,
                    maximizable: true,
                    modal: true,
                    buttons: [{
                        text: '确定',
                        handler: function () {
                            PermissionCtrl.ButtonCommon();
                        }
                    }, {
                        text: '关闭',
                        handler: function () {
                            $('#actiondialog').dialog('close');

                        }
                    }]
                });
            },
            //多选删除
            deleteClick: function () {
                var treeObj = $.fn.zTree.getZTreeObj("Permission");
                var nodes = treeObj.getSelectedNodes();
                if (nodes.length <= 0) {
                    $.messager.show({
                        title: '提示',
                        msg:"请选中一条数据",
                        showType: 'slide',
                        timeout: 2000,
                        style: {
                            right: '',
                            top: document.body.scrollTop + document.documentElement.scrollTop,
                            bottom: ''
                        }
                    });
                    return;
                }

                    $.messager.confirm('Confirm', '你确定要删除吗?', function (r) {
                        if (r) {
                            $.post("/BaseInfo/Permission/delete", { ids: PermissionCtrl.ID }, function (data) {
                                if (data.status == 1) {
                                    $.messager.show({
                                        title: '提示',
                                        msg: data.msg,
                                        showType: 'slide',
                                        timeout: 2000
                                    });
                                    PermissionCtrl.TreePermission();
                                } else {
                                    $.messager.show({	// show error message
                                        title: 'Error',
                                        msg: data.msg
                                    });
                                }
                            }, 'json');
                        }
                    });
              
            },
            OpenView: function () {
                var $this = this;

                $('#dailogActionparent').dialog({
                    title: '选择',
                    width: 400,
                    height: 200,
                    closed: false,
                    cache: false,
                    href: '/BaseInfo/Permission/SeleteAction',
                    modal: true,
                    buttons: [{
                        text: '确定',
                        handler: function () {
                            var treeObj = $.fn.zTree.getZTreeObj("treeactionParent");
                            var nodes = treeObj.getSelectedNodes();
                            $("#ParentId").val(nodes[0].ID);
                            $("#ParentName").val(nodes[0].ActionName);
                            $('#dailogActionparent').dialog('close');


                        }
                    }, {
                        text: '关闭',
                        handler: function () {
                            $('#dailogActionparent').dialog('close');

                        }
                    }]
                });
            }
            
            
        };
        
        $(function () {
            PermissionCtrl.Init();
        });
    </script>
<div class="easyui-layout" fit="true">
    <div data-options="region:'north',border:false" style="height: 30px;">
        @Html.PermissionButton("ActionInfo.Add","a_add","#","新增",new  Dictionary<string, object>{{"plain","true"},{"icon","icon-group_add"},{"class","easyui-linkbutton"},{"onclick","PermissionCtrl.addClick()"}})
            @Html.PermissionButton("ActionInfo.Edit","a_edit","#","编辑",new  Dictionary<string, object>{{"plain","true"},{"icon","icon-group_edit"},{"class","easyui-linkbutton"},{"onclick","PermissionCtrl.editClick()"}})
            @Html.PermissionButton("ActionInfo.Delete","a_del","#","删除",new  Dictionary<string, object>{{"plain","true"},{"icon","icon-group_delete"},{"class","easyui-linkbutton"},{"onclick","PermissionCtrl.deleteClick()"}})
