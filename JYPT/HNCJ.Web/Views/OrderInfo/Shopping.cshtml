@model IEnumerable<HNCJ.Model.CartInfo>

@{
    ViewBag.Title = "确认订单 - 帮吆喝系统";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>确认订单</h2>
@section Content{
    <!----------------------------------中间内容----------------------------------->
        <div class="section clearfix">
              <div class="cart-box">
                <h1>确认订单信息</h1>
                <div class="cart-step">
                  <ul>
                    <li class="item"><span>1</span>查看商品信息</li>
                    <li class="selected"><span>2</span>填写订单信息</li>
                    <li class="last"><span>3</span>支付/确定订单</li>
                  </ul>
                </div>
              </div>
              <div class="line30"></div>
              <h3 class="bar-tit">1、确认收货地址</h3>   
            <script type="text/javascript">
                $(function () {
                    initUserAddress($("#userAddress"));
                });
                function initUserAddress(obj) {
                   
                    //初始化地址
                    $(obj).children("li").each(function () {
                        //初始化值
                        if ($(this).hasClass("selected")) {                            
                            $(this).find("input[name='address_id']").prop("checked", true); //设置选中                            
                        }
                        //初始化事件
                        $(this).click(function () {
                            $(this).siblings("li").removeClass("selected");
                            $(this).addClass("selected");                            
                            $(this).find("input[name='address_id']").prop("checked", true); //设置选中                           
                        });
                    });
                }
            </script>
            
 
            <form action="/OrderInfo/submitOrderInfo" method="post"data-ajax="true" data-ajax-method="post" data-ajax-success="afterOrderSuccess" >
            
             <!--取得一个DataTable-->
              <ul id="userAddress" class="address-list">
                @foreach (var item in ViewBag.AddressInfo as List<HNCJ.Model.AddressInfo>)
                {
                    if (item.IsDefault)
                    {
                         <li class="selected" >                          
                    <label>
                        
                        <input name="address_id" type="radio" value="@item.ID" />
                      <span>@item.Province,@item.City,@item.Area @item.DetailedAddress (@item.Consignee 收)</span>
                      <em>@item.Telphone</em>
                    </label>
                    
                  </li>   
                    }
                    else
                    {
                    <li >                          
                    <label>
                        
                        <input name="address_id" type="radio" value="@item.ID" />
                      <span>@item.Province,@item.City,@item.Area @item.DetailedAddress (@item.Consignee 收)</span>
                      <em>@item.Telphone</em>
                    </label>
                    
                  </li>
                    }

                }
      
    
              </ul>
                 <div class="line30"></div>
                 <h3 class="bar-tit">2、确认订单信息</h3>
                 <table style="width:100%;" class="cart-table">
                    <tr>
                      <th  >商品信息</th>
                      <th  >商品属性</th>
                      <th >单价</th>
                      <th >优惠(元)</th>
                      <th >数量</th>
                      <th >金额(元)</th>      
                    </tr> 
                     @{
                         string ids = "";
                         decimal? price = 0;
                         decimal? money = 0;
                         }
                     @foreach (var items in Model)
                     {
                         ids += items.ID + ",";
                         money = items.GoodsPrice * items.GoodsNum;
                         price += money;
                        <tr>
                          <td >
                            <a target="_blank" href="/HomePage/Details?id=@items.GoodsInfo.ID">
                              <img src="@items.GoodsInfo.ImageMenu" class="img" alt="图片" />
                            </a>
                          </td>
                          <td>
                            <a target="_blank" href="/HomePage/Details?id=@items.GoodsInfo.ID">@items.GoodsInfo.GoodsName</a>
                            <p class="stxt" >时间：@items.RegTime</p>
                          </td>
                          <td><span class="red">￥<label id="p1">@items.GoodsInfo.GoodsPrice</label> </span></td>
                          <td> <span class="red">￥0.00 </span> </td>
                          <td  >@items.GoodsNum</td>    
                          <td><span class="red" id="p2">￥@money</span></td>     
                        </tr>   
                     }
                     <tr>
                         <td colspan="2" rowspan="2" >给卖家留言：<br/>@Html.TextArea("content", "", 4, 60, new { Class="input",style="height:40px;"})</td>
                         <td >运送方式:</td>
                         <td colspan="2" >@Html.DropDownList("freight_id", null, new {Class="select" })</td>
                         <td ><span class="red">0.00</span></td>

                     </tr>
                     <tr><td>发货时间：</td><td colspan="3">卖家承诺订单在买家付款后, 72小时内发货</td></tr>
                     <tr><td colspan="6"></td></tr>
                  </table>
                @{
                         string strss = ids.Substring(0, ids.Length - 1);
                         }
                @Html.Hidden("cart_id",strss)
                 <div class="buy-foot">                   
                     <div class="right">
                              <p class="txt-box">
                                实付总金额：￥<label  class="price">@price</label>
                              </p>
                              <p class="btn-box">          
                                <input  id="btnSubmit" type="submit" value="确认提交" class="btn btn-success" />                  
                              </p>                           
                        </div>
                </div>      
            </form>
    </div>
        <div >
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <style type="text/css">
           
                td
            {
                font-size: 12px;
                padding: 6px 6px 6px 12px;
                color: #4f6b72;
            }
                a {
                    color:#1841b5;
                }
                a:hover{ color:#f00; text-decoration:none; }
            </style>
            <script type="text/javascript">
                
                function afterOrderSuccess(data) {
                    if (data.status == "ok") {
                        window.location.href = "/orderinfo/payment?order_id=" + data.order_id;
                    } else {
                        alert("出错了，请稍后重试！");
                    }
                }
            
                </script>
        </div>
        <!----------------------------------------中间内容-------------------------------->
                }