@model HNCJ.Model.Dept
@{
    Layout = null;
}


    <div  style="width:100%;max-width:400px;padding:30px 60px;">
		<form id="ff" method="post" action="/dept/save">
            <div style="margin-bottom:20px">
                 <label class="textbox-label textbox-label-before" for="_easyui_textbox_input1" style="text-align: left; height: 24px; line-height: 24px;">上级部门：</label>
                 @Html.TextBoxFor(u => u.ParentName, new {@class="textbox",@style="width:200px;height:22px;",@readonly="readonly" })
                 <a class="easyui-linkbutton"data-options="plain:true,iconCls:'icon-group'" onclick="DeptInfoCtrl.SelectDept()" >选择</a>
			</div>
			<div style="margin-bottom:20px">
				<input class="easyui-textbox" name="deptno" style="width:100%" value="@Model.deptno" data-options="label:'编码',required:true">
			</div>
            <div style="margin-bottom:20px">
				<input class="easyui-textbox" name="deptname" style="width:100%" value="@Model.deptname" data-options="label:'名称',required:true">
			</div>
            <div style="margin-bottom:20px">
				<input class="easyui-textbox" name="deptmanager" style="width:100%" value="@Model.deptmanager" data-options="label:'负责人'">
			</div>
         
               <input id="deptmanager" name="deptmanager_id" type="hidden" value="@Model.deptmanager_id">
			
						
			<div style="margin-bottom:20px">
				<input class="easyui-textbox" name="telphone" value="@Model.telphone"  style="width:100%;" data-options="label:'电话:'">
			</div>
            <div style="margin-bottom:20px">
				<input class="easyui-textbox" name="remark" value="@Model.remark" style="width:100%;height:60px" data-options="label:'描述:',multiline:true">
			</div>
            
           @Html.HiddenFor(u=>u.ID)
           @Html.HiddenFor(u=>u.ModfiedOn)
           @Html.HiddenFor(u=>u.RegTime)
           @Html.HiddenFor(u=>u.DelFlag)
           @Html.HiddenFor(u=>u.ParentId)
           

		</form>
	</div>
