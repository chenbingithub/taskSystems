@model HNCJ.Model.UserInfo
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Children.cshtml";
}

<h2>Edit</h2>
@section content{
    
    <input id="url" value="/userinfo/edit" type="hidden" />
    <div   style="width:100%;max-width:400px;padding:30px 60px;">
		<form id="ff" method="post">
			<div style="margin-bottom:20px">
				<input class="easyui-textbox" name="UserName" style="width:100%" value="@Model.UserName" data-options="label:'用户名:',required:true">
			</div>
            <div style="margin-bottom:20px">
				<input class="easyui-textbox" name="NickName" style="width:100%"value="@Model.NickName" data-options="label:'昵称:'">
			</div>
           
            <div style="margin-bottom:20px">
                <label class="textbox-label textbox-label-before" for="_easyui_textbox_input1" style="text-align: left; height: 24px; line-height: 24px;">部门：</label>
                 <input class="easyui-combotree" name="DeptID" value="@Model.DeptID" data-options="url:'/Dept/GetDeptTree',method:'get',panelHeight:'auto',required:true" >
			</div> 
						
			<div style="margin-bottom:20px">
				<input class="easyui-textbox" name="Description" value="@Model.Description" style="width:100%;height:60px" data-options="label:'描述:',multiline:true">
			</div>
            
			<div style="margin-bottom:20px">
				
                <label class="textbox-label textbox-label-before" for="_easyui_textbox_input1" style="text-align: left; height: 24px; line-height: 24px;">状态：</label>
                <input name="State"class="easyui-combobox" value="@Model.State" data-options="panelHeight:'auto',required:true,
		                    valueField: 'value',
		                    textField: 'label',
		                    data: [{
			                    label: '启用',
			                    value: '1'
		                    },{
			                    label: '未启用',
			                    value: '0'
		                    }]" />
			</div> 
           @Html.HiddenFor(u=>u.ID)
           @Html.HiddenFor(u=>u.salt)
           @Html.HiddenFor(u=>u.UserPwd)
           @Html.HiddenFor(u=>u.IsSys)
           @Html.HiddenFor(u=>u.ModfiedOn)
           @Html.HiddenFor(u=>u.RegTime)
           @Html.HiddenFor(u=>u.Avatar)
           @Html.HiddenFor(u=>u.DelFlag)

		</form>
	</div>
    }