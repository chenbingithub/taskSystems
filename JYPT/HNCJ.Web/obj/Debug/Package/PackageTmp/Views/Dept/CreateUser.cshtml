@{
    Layout = null;
}
@model HNCJ.Model.UserInfo


    <div   style="top:50%;left:50%;margin-left:50px;margin-top:20px">
		<form id="ff" method="post" action="/dept/saveuser">
	    	<table cellpadding="5"  >
                <tr>
	    			<td>所属部门:</td>
	    			<td><input id="DeptName" class="easyui-textbox"  readonly="true" type="text" name="DeptName" value="@Model.DeptName"  />

	    			</td><td></td>
                     <td><input id="DeptID" type="hidden" name="DeptID" value="@Model.DeptID"  /></td>
	    		</tr>
	    		<tr>
	    			<td>用户名:</td>
	    			<td><input class="easyui-textbox" type="text" name="UserName" @(Model.ID==0?"":"readonly='true'") value="@Model.UserName" data-options="required:true" /></td>
                     <td>真实姓名：</td><td><input type="text" name="NickName" value="@Model.NickName" class="easyui-textbox"  /></td>
	    		</tr>
	    		<tr>
                  <td>性别：</td><td><input class="easyui-textbox" type="text" name="Sex" value="@Model.Sex"  /></td>
                  <td>出生日期：</td><td><input id="" class="easyui-datebox" type="text" data-options="prompt:'请输入出生日期',currentText:'今天',closeText:'关闭'" name="Birthday" value="@(Model.Birthday==null?"":Model.Birthday.Value.ToString("MM/dd/yyyy"))" /></td>

              </tr>
              <tr>
                  <td>手机号：</td><td><input type="text" name="Telphone" value="@Model.Telphone" class="easyui-textbox" /></td>
                  <td>家庭电话：</td><td><input type="text" name="Moblie" value="@Model.Moblie" class="easyui-textbox" /></td>

              </tr>
              <tr>
                  <td>电子邮箱：</td><td><input type="text" name="Email" value="@Model.Email" class="easyui-textbox" data-options="prompt:'请输入正确的邮箱格式',validType:'email'" /></td>
                  <td>QQ：</td><td><input type="text" name="qq" value="@Model.qq" class="easyui-textbox" /></td>
              </tr>
              <tr>
                  <td>现住址：</td><td><input type="text" name="Address" value="@Model.Address" class="easyui-textbox" /></td>
                  <td>地区：</td><td><input type="text" name="area" value="@Model.area" class="easyui-textbox" /></td>
              </tr>
                <tr>
                  <td>有效：</td><td>@Html.CheckBox("State", (bool)Model.State, new { @class="textbox"})</td>
                  <td>是否系统用户：</td><td>@Html.CheckBox("IsSys", (bool)Model.IsSys, new { @class="textbox"})</td>
              </tr>
                </table>
            @Html.HiddenFor(u=>u.ID)
            @Html.HiddenFor(u=>u.DelFlag)
            @Html.HiddenFor(u=>u.Point)
            @Html.HiddenFor(u=>u.RegTime)
            @Html.HiddenFor(u=>u.salt)
            @Html.HiddenFor(u=>u.Amount)
            @Html.HiddenFor(u=>u.Avatar)
            
            @Html.HiddenFor(u=>u.ModfiedOn)
            @Html.HiddenFor(u=>u.UserPwd)
            </form>
	</div>

