@{
    Layout = null;
}

<!DOCTYPE html >
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>webos</title>


    <link href="~/Content/login/css/main.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript" src="~/Content/login/js/fun.base.js"></script>
    <script type="text/javascript" src="~/Content/login/js/script.js"></script>
    <script src="~/Content/windows/js/webos-core.js"></script>
    <script type="text/javascript">
        function afterLogin(data) {
            var serverData = data.split(':');
            if (serverData[0] == "ok") {
                //alert("登录成功");
                window.location.href = "/homepage/index";
            } else if (serverData[0] == "no") {
                //$("#errorMsg").text(serverData[1]);
                alert(serverData[1]);
                changeCheckCode();
            } else {
                // $("#errorMsg").text("系统繁忙！");
                alert(serverData[1]);
            }
        }

    </script>
</head>
<body>

    
<div class="login">
    <div class="box png">
		<div class="logo png"></div>
		<div class="input">
			<div class="log">
                @using (Ajax.BeginForm("ProcessLogin", "UserLogin", new AjaxOptions() {  OnSuccess = "afterLogin" }))
                {
				<div class="name">
					<label>用户名</label>
                    <input type="text" class="text" id="LoginCode" placeholder="用户名" name="LoginCode" />
                </div>
				<div class="pwd">
					<label>密　码</label><input type="password" class="text" id="LoginPwd" placeholder="密码" name="LoginPwd" />
					<input type="submit" class="submit" value="登录" />
					<div class="check"></div>
				</div>
                }
				<div class="tip"></div>
			</div>
		</div>
	</div>
    <div class="air-balloon ab-1 png"></div>
	<div class="air-balloon ab-2 png"></div>
    <div class="footer"></div>
</div>

   
    
<!--[if IE 6]>
<script src="js/DD_belatedPNG.js" type="text/javascript"></script>
<script>DD_belatedPNG.fix('.png')</script>
<![endif]-->

</body>
</html>
