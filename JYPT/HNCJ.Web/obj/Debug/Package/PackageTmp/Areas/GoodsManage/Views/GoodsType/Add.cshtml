@model HNCJ.Model.GoodsType
@{
    Layout =null;
}



   
    
    <div   style="width:100%;max-width:400px;padding:30px 60px;">
		<form id="ff" method="post" action="/goodsmanage/goodstype/save">
            <div style="margin-bottom:20px">
                @Html.DropDownList("NodeID",new SelectList(ViewBag.List as System.Collections.IEnumerable,"ID","TypeName",Model.NodeID),new {@class="easyui-combobox",@style="width:260px;",@label="上级节点",@data_options="panelHeight:'100'"})
			</div> 
            <div style="margin-bottom:20px">
                @Html.TextBoxFor(u => u.TypeName, new {@class="easyui-textbox",@style="width:100%",@data_options="label:'名称:',required:true" })
			</div>
			<div style="margin-bottom:20px">
                @Html.TextBoxFor(u => u.English, new {@class="easyui-textbox",@style="width:100%",@data_options="label:'英文名称:',required:true" })
			</div>
            <div style="margin-bottom:20px">
                @Html.TextBoxFor(u => u.Url, new {@class="easyui-textbox",@style="width:100%",@data_options="label:'链接:',required:true" })
			</div>
             
            
            
			@Html.HiddenFor(u=>u.ID)
			@Html.HiddenFor(u=>u.RegTime)
			@Html.HiddenFor(u=>u.ModfiedOn)
			@Html.HiddenFor(u=>u.DelFlag)
       

		</form>
	</div>
    