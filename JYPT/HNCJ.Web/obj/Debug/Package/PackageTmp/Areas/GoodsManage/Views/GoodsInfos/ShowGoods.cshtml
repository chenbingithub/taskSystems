@{
    Layout =null;
}
<script src="~/Content/jquery-easyui-1.5/datapattern.js"></script>
<script type="text/javascript">
    var GoodsInfoCtrl = {
        UserId:0,
        Init: function () {
            this.UserId = GoodsManageCtrl.ID;
            this.CreateDatagrid();
        },
        //创建用户数据表格
        CreateDatagrid: function () {
            $('#dg').datagrid({
                height: '100%',
                width: '100%',
                url: '/goodsmanage/GoodsInfos/GetGoodsList',
                pageSize: 20,
                pagination: true,
                rownumbers: true,
                fitColumns: true,
                toolbar: "#toolbar",
                queryParams: {
                    userId:this.UserId
                },
                columns: [[
                    { field: 'ck', width: 50, checkbox: true },
                    { field: 'GoodsName', title: '名称', width: 80 },
                    { field: 'GoodsTypeName', title: '类型', width: 80, align: 'center' },
                    { field: 'GoodsPrice', title: '单价', width: 80, align: 'center' },
                    { field: 'GoodsNum', title: '数量', width: 50, align: 'center'},
                    //{ field: 'GoodsRemark', title: '描述说明', width: 120},
                    { field: 'RegTime', title: '上架时间', width: 120, formatter: function (value) { return value.formatter("yyyy-MM-dd hh:mm:ss"); } },
                ]]
            });
            //设置分页控件 
            var p = $('#dg').datagrid('getPager');
            $(p).pagination({
                pageSize: 20,//每页显示的记录条数，默认为10 
                pageList: [10, 20, 50],//可以设置每页记录条数的列表 
                beforePageText: '第',//页数文本框前显示的汉字 
                afterPageText: '页    共 {pages} 页',
                displayMsg: '当前显示 {from} - {to} 条记录   共 {total} 条记录',

            });
        },
        //重新加载
        doSearch: function () {
            
            $('#dg').datagrid('load', {
                userId: this.UserId,
                KeyString: $("#KeyString").val()
            });
        },
        //公用按钮保存
        ButtonCommon: function () {
            $('#ff').form('submit', {
                onSubmit: function () {
                    var isValid = $(this).form('enableValidation').form('validate');

                    if (!isValid) {
                        $.messager.progress('close');
                    }
                    return isValid;
                },
                success: function (data) {
                    var data = eval('(' + data + ')'); // change the JSON string to javascript object
                    if (data.status == 1) {
                        $('#dailoggoods').dialog('close');
                        $.messager.show({
                            title: '提示',
                            msg: data.msg,
                            showType: 'slide',
                            timeout: 2000,
                        });
                        GoodsInfoCtrl.doSearch();
                    } else {
                        $.messager.show({
                            title: '提示',
                            msg: data.msg,
                            showType: 'slide',
                            timeout: 2000,
                            style: {
                                right: '',
                                top: document.body.scrollTop + document.documentElement.scrollTop,
                                bottom: ''
                            }
                        });
                    }
                }
            });
        },
        //点击新增用户
        addClick: function () {
            var url = "/goodsmanage/GoodsInfos/add";
            var $this = this;
            $('#dailoggoods').dialog({
                title: '弹窗',
                width: 600,
                height: 300,
                closed: false,
                href: url,
                cache: false,
                maximizable: true,
                modal: true,
                buttons: [{
                    text: '确定',
                    handler: function () {
                        $this.ButtonCommon();
                    }
                }, {
                    text: '关闭',
                    handler: function () {
                        $('#dailoggoods').dialog('close');

                    }
                }]
            });
        },
        //编辑用户
        editClick: function () {
            var rows = $('#dg').datagrid('getSelections');
            if (rows.length != 1) {
                $.messager.show({
                    title: '提示',
                    msg: "请选中一行",
                    showType: 'slide',
                    timeout: 2000,
                });
                return;
            }
            var $this = this;
            var row = $('#dg').datagrid('getSelected');
            var url = "/goodsmanage/GoodsInfos/edit/" + row.ID;
            $('#dailoggoods').dialog({
                title: '弹窗',
                width: 600,
                height: 300,
                closed: false,
                href: url,
                cache: false,
                maximizable: true,
                modal: true,
                buttons: [{
                    text: '确定',
                    handler: function () {
                        $this.ButtonCommon();
                    }
                }, {
                    text: '关闭',
                    handler: function () {
                        $('#dailoggoods').dialog('close');

                    }
                }]
            });
        },
        //多选删除用户
        deleteClick: function () {
            var rows = $('#dg').datagrid('getSelections');
            var ids = "";
            
            if (rows.length > 0) {
                for (var key in rows) {
                    ids = ids + rows[key].ID + ",";
                }
                ids = ids.substr(0, ids.length - 1);
                $.messager.confirm('Confirm', '你确定要删除吗?', function (r) {
                    if (r) {
                        $.post("/goodsmanage/GoodsInfos/delete", { ids: ids }, function (data) {
                            if (data.status == 1) {
                                $.messager.show({
                                    title: '提示',
                                    msg: data.msg,
                                    showType: 'slide',
                                    timeout: 2000,
                                });
                                GoodsInfoCtrl.doSearch();
                            } else {
                                $.messager.show({	// show error message
                                    title: 'Error',
                                    msg: data.msg
                                });
                            }
                        }, 'json');
                    }
                });
            } else {
                $.messager.show({
                    title: '提示',
                    msg: "请选中一行",
                    showType: 'slide',
                    timeout: 2000,
                });
                return;
            }
            
        },
        

    }
    $(function () {
        GoodsInfoCtrl.Init();
    });
</script>
<div class="easyui-panel" fit="true" border="false">
       <table id="dg"></table>
   </div>
<div id="toolbar">            
                <a id="a_add"     href="#" plain="true" class="easyui-linkbutton" icon="icon-user_add"   onclick="GoodsInfoCtrl.addClick()">新增</a>
                <a id="a_edit"    href="#" plain="true" class="easyui-linkbutton" icon="icon-user_edit" onclick="GoodsInfoCtrl.editClick()" >编辑</a>
                <a id="a_del"     href="#" plain="true" class="easyui-linkbutton" icon="icon-user_delete"  onclick="GoodsInfoCtrl.deleteClick()">删除</a>
            <div style="float:right;">
   
	    <input name="KeyString" id="KeyString" type="text"class="easyui-textbox" onkeydown="if(event.keyCode==13){GoodsInfoCtrl.doSearch();}">
            <a href="#" class="easyui-linkbutton" iconCls="icon-search" plain="true" onclick="GoodsInfoCtrl.doSearch()">搜索</a>
        </div>
    </div>
    <div id="dailoggoods"></div>