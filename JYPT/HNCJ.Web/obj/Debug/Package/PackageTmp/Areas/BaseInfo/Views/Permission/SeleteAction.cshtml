@{
    Layout = null;
}

<script type="text/javascript">
    $(function () {
        $.fn.zTree.init($("#treeactionParent"), {
            data: {
                key: {
                    name: "ActionName"
                },
                simpleData: {
                    enable: true,
                    idKey: "ID",
                    pIdKey: "ParentId"
                }
            },
            async: {
                enable: true,
                type: "post",
                url: "/BaseInfo/Permission/GetList"
            },
            callback: {
                onAsyncSuccess: function (event, treeId, treeNode, msg) {
                    var treeObj = $.fn.zTree.getZTreeObj("treeactionParent");
                    var nodes = treeObj.getNodes();
                    if (nodes.length > 0) {
                        treeObj.expandNode(nodes[0], true, false, true);
                    }

                }
            }

        });
    });
    </script>
       <ul id="treeactionParent" class="ztree"></ul> 


    
    